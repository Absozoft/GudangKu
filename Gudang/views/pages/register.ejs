<!-- VIEW: REGISTER -->
<section id="view-register" class="view-section">
    <div class="form-card">
        <button type="button" id="btn-register-back" class="btn-back" title="Kembali" aria-label="Kembali" style="margin-bottom:8px;">
            <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false">
                <path d="M15 6 L9 12 L15 18" fill="none" stroke="#ffffff" stroke-linecap="round" stroke-linejoin="round" stroke-width="2.6" />
            </svg>
        </button>
        <h2>Register</h2>
        <form id="form-register">
            <div class="form-group">
                <label for="reg-username">Username</label>
                <input type="text" id="reg-username" placeholder="Pilih username" required>
            </div>
            <div class="form-group">
                <label for="reg-password">Password</label>
                <input type="password" id="reg-password" placeholder="Pilih password" required>
            </div>
            <button type="submit" class="btn btn-primary" style="width: 100%; justify-content: center;">Register</button>
        </form>
        <div class="auth-switch">
            Sudah punya akun? <a href="#" id="switch-to-login">Login di sini</a>
        </div>
    </div>
</section>
