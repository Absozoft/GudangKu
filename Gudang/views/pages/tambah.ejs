<!-- VIEW 1: TAMBAH DATA -->
<section id="view-tambah" class="view-section active">
    <div class="form-card">
        <h2>Tambah Barang Baru</h2>
        <form id="form-barang">
            <input type="hidden" id="id-barang">
            <div class="form-group">
                <label for="nama-barang">Nama Barang</label>
                <input type="text" id="nama-barang" placeholder="Masukkan nama barang" required>
            </div>
            <div class="form-group">
                <label for="qty">Quantity (Jumlah)</label>
                <input type="number" id="qty" placeholder="Masukkan jumlah" required>
            </div>
            <div class="form-group">
                <label for="harga-barang">Harga Barang</label>
                <input type="number" id="harga-barang" step="0.01" placeholder="Masukkan harga" required>
            </div>
                <div class="form-group">
                    <label for="gambar">Gambar Barang (opsional)</label>
                    <input type="file" id="gambar" accept="image/*">
                </div>
            <button type="submit" class="btn btn-primary" id="tombol-submit">
                <i class="fas fa-save"></i> <span id="tombol-submit-text">Tambah Barang</span>
            </button>
            <button type="button" class="btn btn-secondary" id="tombol-batal" style="display:none;">
                <i class="fas fa-times"></i> Batal
            </button>
        </form>
    </div>
</section>
